<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dessert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/desserty"
    tools:context="com.example.hppav.restraunt.Dessert">

    <TextView
        android:text="Rs. 300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_alignTop="@+id/cb3"
        android:textColor="?attr/colorControlActivated"/>

    <TextView
        android:text="Rs. 350"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:layout_above="@+id/cb5"
        android:textColor="?attr/colorControlActivated" />

    <TextView
        android:text="Rs. 650"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cb5"
        android:layout_alignEnd="@+id/textView5"
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:textColor="?attr/colorControlActivated"/>

    <TextView
        android:text="Rs. 500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/cb1"
        android:layout_alignBottom="@+id/cb1"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="?attr/colorControlActivated"/>

    <TextView
        android:text="Rs. 450"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/cb2"
        android:layout_alignBottom="@+id/cb2"
        android:layout_alignStart="@+id/textView2"
        android:textStyle="bold"
        android:textColor="?attr/colorControlActivated"/>

    <TextView
        android:text="DESSERTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="?attr/colorControlActivated"/>

    <CheckBox
        android:text="Waffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb3"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="?attr/colorControlActivated"/>

    <CheckBox
        android:text="Ice Cream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/cb4"
        android:textStyle="bold"
        android:layout_below="@+id/cb3"
        android:layout_alignParentStart="true"
        android:textColor="?attr/colorControlActivated"/>

    <CheckBox
        android:text="Cheesecake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/cb5"
        android:textStyle="bold"
        android:layout_below="@+id/cb4"
        android:layout_alignParentStart="true"
        android:textColor="?attr/colorControlActivated"/>

    <CheckBox
        android:text="Brownie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb1"
        android:textStyle="bold"
        android:layout_above="@+id/cb2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:textColor="?attr/colorControlActivated"/>

    <TextView
        android:text="ITEMS "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/items"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/price"
        android:layout_alignBottom="@+id/price"
        android:layout_alignEnd="@+id/cb3"
        android:textColor="?attr/colorControlActivated"/>

    <CheckBox
        android:text="Apple Pie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb2"
        android:textStyle="bold"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textColor="?attr/colorControlActivated"/>

    <TextView
        android:text="PRICE(PER PC.)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textStyle="bold"
        android:layout_above="@+id/cb1"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp"
        android:textColor="?attr/colorControlActivated" />

    <TextView
        android:text="QUANTITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:textColor="?attr/colorControlActivated"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/price"
        android:layout_alignBottom="@+id/price"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter in numerics"
        android:ems="10"
        android:layout_alignTop="@+id/cb5"
        android:layout_alignStart="@+id/ice_cream"
        android:id="@+id/cheesecake" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter in numerics"
        android:ems="10"
        android:id="@+id/ice_cream"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/cb5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter in numerics"
        android:ems="10"
        android:id="@+id/waffle"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/ice_cream" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter in numerics"
        android:ems="10"
        android:id="@+id/apple_pie"
        android:layout_alignTop="@+id/cb2"
        android:layout_alignStart="@+id/waffle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter in numerics"
        android:ems="10"
        android:id="@+id/brownie"
        android:layout_below="@+id/price"
        android:layout_alignStart="@+id/apple_pie" />

</RelativeLayout>
