<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_salad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/salad84"
    tools:context="com.example.hppav.restraunt.Salad">

    <TextView
        android:text="TYPE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:id="@+id/textView18" />

    <TextView
        android:text="PRICE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="37dp"
        android:id="@+id/price" />

    <TextView
        android:text="Fruit Salad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_marginTop="32dp"
        android:id="@+id/fruit" />

    <TextView
        android:text="Vegetable Salad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fruit"
        android:layout_alignStart="@+id/fruit"
        android:layout_marginTop="26dp"
        android:id="@+id/veg" />

    <TextView
        android:text="Cold Pasta Salad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/veg"
        android:layout_alignStart="@+id/veg"
        android:layout_marginTop="31dp"
        android:id="@+id/bl" />

    <TextView
        android:text="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fruit"
        android:layout_alignEnd="@+id/price"
        android:id="@+id/fprice" />

    <TextView
        android:text="300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bl"
        android:layout_alignStart="@+id/fprice"
        android:id="@+id/vprice" />

    <TextView
        android:text="600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bl"
        android:layout_alignStart="@+id/vprice"
        android:id="@+id/pprice" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="20dp"
        android:id="@+id/spinner"
        android:entries="@array/snack_names"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/bl"
        android:layout_alignStart="@+id/bl"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_alignBaseline="@+id/spinner"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignEnd="@+id/pprice" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/editText8"
        android:id="@+id/quantity" />


</RelativeLayout>
