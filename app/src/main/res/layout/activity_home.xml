<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hppav.restraunt.Home">


    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@drawable/mc"
        android:id="@+id/maincourseimg"
        android:background="@drawable/border1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Drinks"
        android:id="@+id/drinks"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="8"
        tools:background="@drawable/border1"
        android:background="@drawable/border1"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/starter" />

    <ImageView

        app:srcCompat="@drawable/drinks_image"
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:background="@drawable/border1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:layout_height="100dp"
        android:layout_above="@+id/drinks"
        android:layout_toStartOf="@+id/dessert" />

    <ImageView
        app:srcCompat="@drawable/dessert"
        android:id="@+id/dessertimg"
        android:layout_weight="1"
        android:background="@drawable/border1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@drawable/starters"
        android:id="@+id/starterimg"
        android:background="@drawable/border1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Salad"
        android:id="@+id/salad"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="8"
        tools:background="@drawable/border1"
        android:background="@drawable/border1"

        android:layout_alignBaseline="@+id/starter"
        android:layout_alignBottom="@+id/starter"
        android:layout_toEndOf="@+id/starter" />

    <ImageView

        app:srcCompat="@drawable/salad1"
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:background="@drawable/border1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:layout_height="100dp"
        android:layout_above="@+id/starter"
        android:layout_alignStart="@+id/maincourseimg" />

    <Button
        android:text="STARTER"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/starter"
        android:onClick="starter"
       android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:background="@drawable/border1"
        android:layout_below="@+id/starterimg"
        android:layout_toStartOf="@+id/mc" />

    <Button
        android:text="MAIN COURSE"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/mc"
        android:onClick="main_course"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:background="@drawable/border1"
        android:layout_below="@+id/maincourseimg"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="DESSERT"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/dessert"
        android:onClick="dessert"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="8"
        tools:background="@drawable/border1"
        android:background="@drawable/border1"
        android:layout_below="@+id/dessertimg"
        android:layout_toEndOf="@+id/salad" />


</RelativeLayout>
